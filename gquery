#!/usr/bin/env python3
"""Google Agent CLI - Quick query tool for Gmail and Calendar."""

import sys
from agents import GoogleAgent
from utils import print_result


def main():
    """Execute a Google Agent query from command line."""
    if len(sys.argv) < 2:
        print("Usage: gquery 'your query here'")
        print()
        print("Examples:")
        print("  gquery 'How many unread emails in my inbox?'")
        print("  gquery 'How many emails from alice@example.com in inbox?'")
        print("  gquery 'What events do I have today?'")
        print("  gquery 'How many days does AJ work this week?'")
        sys.exit(1)

    # Get the query from command line arguments
    query = " ".join(sys.argv[1:])

    # Execute the query
    agent = GoogleAgent(verbose=False)
    result = agent.execute_task(query)

    # Print the result in human-readable format
    print_result(result)


if __name__ == "__main__":
    main()
